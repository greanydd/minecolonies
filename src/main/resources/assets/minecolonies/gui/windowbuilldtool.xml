        <buttonimage id="cancel" source="minecolonies:textures/gui/cancel.png" size="32" pos="28 80"/>
    </view>

    <view size="270 60" pos="45 170">
        <button id="previousSection" size="15 15" pos="0 0" label="&lt;"/>
        <button id="buildingType" size="200 15" pos="15 0"/>
        <button id="nextSection" size="15 15" pos="215 0" label="&gt;"/>

        <button id="previousStyle" size="15 15" pos="0 20" label="&lt;"/>
        <button id="style" size="200 15" pos="15 20"/>
        <button id="nextStyle" size="15 15" pos="215 20" label="&gt;"/>

        <button id="previousSchematic" size="15 15" pos="0 40" label="&lt;"/>
        <button id="schematic" size="200 15" pos="15 40"/>
        <button id="nextSchematic" size="15 15" pos="215 40" label="&gt;"/>

        <button id="rename" size="15 15" pos="235 40" label="R"/>
        <button id="delete" size="15 15" pos="250 40" label="ยงnยง4X"/>
    </view>

    <!--pseudo dialog box for delete confirmation -->

    <view id="deleteView" size="100% 100%" pos="0 0">
        <view id="deleteView" size="256 180" pos="110 30">
            <image source="minecolonies:textures/gui/dialog.png" pos="0 0" size="256px 180px"/>
            <label                    size="100% 11" pos="0 20" textalign="TOP_MIDDLE" color="black" label="$(com.minecolonies.coremod.gui.structure.delete.title)"/>
            <text id="deleteMessage"     size="150 30" pos="53 70" textalign="TOP_MIDDLE" color="black"/>
            <button id="deleteDone"   size="200 20" pos="28 110" label="$(gui.done)"/>
            <button id="deleteCancel" size="200 20" pos="28 134" label="$(gui.cancel)"/>
        </view>
    </view>
